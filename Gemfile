source "https://rubygems.org"

ruby "3.2.0" # necessary if deploying to Heroku so it knows the Ruby version to use when serving the project

gem "minitest"
gem "rack-test"

gem "bcrypt"
gem "redcarpet"
gem "sinatra" # for sinatra framework
gem "sinatra-contrib" #  part of Sinatra::Contrib project for sinatra reloader
gem "erubis" # Erubis engine for ERB files, part of Tilt, an interface for different Ruby template engines. Erubis is faster than ERB gem.
gem "webrick" # for using WEBrick web server